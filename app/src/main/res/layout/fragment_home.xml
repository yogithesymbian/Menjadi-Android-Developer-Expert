<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="id.scode.exercise05Fragment.HomeFragment"
        android:id="@+id/clayout_fragment_home">

    <!-- TODO: Update blank fragment layout -->
    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_fragment_home"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:text="@string/hello_blank_fragment"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/button_to_fragment_home"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:text="@string/fraghome_to_frag_category"
            android:textAllCaps="false"
            app:icon="@drawable/ic_home_black_24dp"
            app:layout_constraintTop_toBottomOf="@+id/text_fragment_home"
            app:layout_constraintEnd_toEndOf="@+id/text_fragment_home"
            app:layout_constraintStart_toStartOf="@+id/text_fragment_home"
            android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
